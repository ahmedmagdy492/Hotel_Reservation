@using Hotels_Resrevation.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<div style="text-align: center;height: 90vh;display: grid; justify-content: center; align-items: center;">    
    <section id="loginForm">
        <h2>@Hotels_Resrevation.Resources.HomeIndex.Login</h2>
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "ui form", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { style="color: red" })
            <div class="field">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="ui input">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })                    
                </div>
                <div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { style="color: red" })
                </div>
            </div>
            <div class="field">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="ui input">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
                <div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { style = "color: red" })
                </div>
            </div>
            <div class="field" style="margin-top: 10px;">
                <div class="ui checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
            </div>
            <div class="field">
                <div style="margin-top: 10px;">
                    <button type="submit" class="ui secondary button">@Hotels_Resrevation.Resources.HomeIndex.Login</button>
                </div>
            </div>            
            @* Enable this once you have account confirmation enabled for password reset functionality
            <p>
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
            </p>*@
        }
    </section>    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}