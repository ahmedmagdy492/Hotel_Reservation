@model Hotels_Resrevation.Models.ChangePasswordViewModel
@{
    ViewBag.Title = @Hotels_Resrevation.Resources.Profile.ProfileIndex.Change_your_password;
}

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "ui form", role = "form", dir = (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "ar" ? "rtl" : "ltr"), style = "margin: 50px;" }))
{
    <h2>@ViewBag.Title</h2>
    @Html.AntiForgeryToken()
    <h4>@Hotels_Resrevation.Resources.Profile.ProfileIndex.Change_your_password</h4>
    <hr />
    @Html.ValidationSummary("", new { style="color: red;" })
    <div class="field">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="field">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="field">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="field">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Hotels_Resrevation.Resources.Profile.ProfileIndex.Change_your_password" class="ui secondary button" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}